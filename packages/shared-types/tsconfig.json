{
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["src"]
}
